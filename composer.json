{
  "name": "cline/intl",
  "description": "Type-safe internationalization value objects and validation rules for Laravel applications including countries, currencies, locales, phone numbers, postal codes, and addresses",
  "license": "MIT",
  "keywords": [
    "internationalization",
    "i18n",
    "intl",
    "localization",
    "l10n",
    "country",
    "currency",
    "locale",
    "phone-number",
    "postal-code",
    "address",
    "timezone",
    "laravel",
    "validation",
    "value-objects",
    "spatie-laravel-data",
    "symfony-intl"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "brick/phonenumber": "^0.8.0",
    "brick/postcode": "^0.5.0",
    "commerceguys/addressing": "^2.2.4",
    "illuminate/contracts": "^12.28",
    "spatie/laravel-data": "^4.18.0",
    "symfony/intl": "^7.4 || ^8.0"
  },
  "require-dev": {
    "cline/coding-standard": "^1.5.8",
    "ergebnis/composer-normalize": "^2.48.2",
    "orchestra/testbench": "^10.8",
    "pestphp/pest": "^4.1.6",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^7.4.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Intl\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
